/**pages/index/index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  position: fixed;
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  align-items: center;
}

.content {
  box-sizing: border-box;
  padding: 0 20rpx;
}

.content .content_title {
  display: block;
  box-sizing: border-box;
  margin: 40rpx 0 40rpx 0;
  padding-left: 15rpx;
  color: #333;
  font-size: 60rpx;
}

.content .item_content {
  box-sizing: border-box;
  background: #ffffff;
  margin-bottom: 20rpx;
  padding: 40rpx;
  border: 1px solid #eaeaea;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.08);
  font-size: 25rpx;
  line-height: 50rpx;
  color: #000000;
  text-align: justify;
}

.content .item_content:last-child {
  margin-bottom: 0;
}

.content .item_content .item_content_title {
  line-height: 60rpx;
  font-size: 30rpx;
  color: #000000;
}

.content .item_content_hover {
  background: #e8e8e8;
}
