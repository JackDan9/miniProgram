<!--pages/news/news.html-->
<scroll-view 
  class="news-container" 
  scroll-y="true" 
  bindscrolltolower="scrollToLowerNewsEvent"
  enable-flex="true">
  <view 
    class="news-list" 
    hover-class="none" 
    hover-stop-propagation="false"
    wx:for="{{dateArray}}"
    wx:for-item="item"
    wx:key="date"
    wx:if="{{item.array.length > 0}}">
    <text class="title">{{item.date}}</text>
    <view
      id="{{itemContent.id}}"
      class="content"
      hover-class="content-cover"
      wx:for="{{item.array}}" 
      wx:for-item="itemContent" 
      wx:key="id"
      bindtap="toNewsDetail">
      <view class="content-title">
        <text>{{itemContent.title}}</text>
      </view>
      <view class="content-summary">
        <text>{{itemContent.summary}}</text>
      </view>
      <view class="content-reporter">
        <text>由 {{itemContent.source_name}} 提供</text>
      </view>
    </view>
  </view>
</scroll-view>